<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.iwi.copypaste.controllers.MainController"
            fx:id="mainPane"
            id="mainPane">

    <top>
        <BorderPane>
            <left>
                <fx:include fx:id="menuBar" source="menuBar.fxml"/>
            </left>
            <right>
                <fx:include fx:id="pinBar" source="pinBar.fxml"/>
            </right>
            <bottom>
                <fx:include fx:id="addButton" source="addButton.fxml"/>
            </bottom>
        </BorderPane>
    </top>

    <center>
        <fx:include fx:id="buttonsField" source="buttonsField.fxml"/>
    </center>

    <bottom>
        <fx:include fx:id="editText" source="editText.fxml"/>
    </bottom>
</BorderPane>
