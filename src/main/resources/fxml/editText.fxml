<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.iwi.copypaste.controllers.EditTextController"
      fx:id="editTextPane"
      id="editTextPane"
      alignment="CENTER">

    <Separator maxWidth="480" minHeight="10"/>

    <HBox spacing="5" alignment="CENTER" prefHeight="40" prefWidth="480">
        <Label text=" Edit text:" prefWidth="100"/>
        <Button text="Copy" prefWidth="60"/>
        <Button text="Clear" prefWidth="60"/>
    </HBox>
    <HBox spacing="5" alignment="CENTER" prefHeight="40" prefWidth="480">
        <TextArea prefWidth="480" prefRowCount="4"/>
    </HBox>

    <Separator maxWidth="480" minHeight="10"/>
</VBox>

